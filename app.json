{
	"id": "no.jib.wizbulb",
	"version": "1.0.0",
	"compatibility": ">=2.4.0",
	"sdk": 2,
	"brandColor": "#FF0000",
	"name": {
		"en": "Wizbulb"
	},
	"description": {
		"en": "Wiz bulb control APP",
		"no": "Wiz lampe styre APP",
		"de": "Wiz Lampensteuerung APP",
		"nl": "Wiz-lampbesturing APP"
	},
	"category": "lights",
	"author": {
		"email": "jan-ivar@boyum.priv.no",
		"name": "Jan-Ivar Bøyum"
	},
	"images": {
		"large": "assets/images/large.jpg",
		"small": "assets/images/small.jpg"
	},
	"speech": [],
	"permissions": [],
	"drivers": [
		{
			"id": "WizBulbHomeyDriver",
			"name": {
				"en": "WizBulb Driver",
				"no": "Wiz lampe enhet"
			},
			"class": "light",
			"capabilities": [ "onoff", "dim", "light_hue", "light_saturation", "light_temperature" ],
			"capabilitiesOptions": {
				"dim": {
					"min": 0,
					"max": 100,
					"step": 1
				},
				"light_temperature": {
					"units": {
						"en": "K"
					},
					"min": 2200,
					"max": 6000,
					"step": 10
				}
			},
			"pair": [
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_devices"
					}
				},
				{
					"id": "add_devices",
					"template": "add_devices"
				}
			]
		}
	]
}